{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchFileNames": [
        "package.json"
      ],
      "labels": [
        "deps:module"
      ]
    },
    {
      "matchFileNames": [
        "playground/package.json"
      ],
      "labels": [
        "deps:playground"
      ]
    },
    {
      "matchFileNames": [
        ".github/workflows/publish.yml"
      ],
      "labels": [
        "deps:workflow"
      ]
    }
  ]
}
